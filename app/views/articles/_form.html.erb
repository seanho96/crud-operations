<%# Need to provide form with the scope of the Model and the URL to submit %>
<%# local:true specifies that we want to send via HTTP POST and not remotely via AJAX %>
<%# form_for comes with standard HTTP POST and won't need `local` %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-4 mb-3 bg-info rounded",
      local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row mt-4">
          <%= form.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow
            rounded" %>
          </div>
        </div>
        <div class="form-group row justify-content-center mt-4">
          <%= form.submit class: "btn btn-outline-light btn-lg w-50" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
