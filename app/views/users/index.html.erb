 <h1 class="text-center">Meta Bloggers</h1>

<div class="d-flex justify-content-center mt-4">
  <%= will_paginate @users %>
</div>
<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic"><%= link_to user.username, user %></div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text">
              <%= pluralize(user.articles.count, "article") %>
            </p>
            <%= link_to 'View profile', user, class: "btn btn-outline-primary" %>
            <% if logged_in? %> 
              <% if user == current_user %>
                <%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-outline-secondary" %>
              <% end %>
              <% if current_user.admin? %>
                <%= link_to 'Delete profile', user, method: :delete, data: { confirm: 
                'Are you sure you want to delete the user account and all associated articles?' },
                class: "btn btn-outline-danger" %>
              <% end %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            Joined <%= time_ago_in_words(user.created_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <p class="text-center"><%= link_to "Create new article", new_article_path %></p>
</div>