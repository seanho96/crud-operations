<h1 class="text-center mt-4">Categories</h1>

<div class="d-flex justify-content-center mt-4">
  <%= will_paginate @articles %>
</div>

<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to category.name, category_path(category), class:
              "text-success text-decoration-none" %>
            </h5>
          </div>
          <div class="card-footer text-muted">
            Created <%= time_ago_in_words(category.created_at) %> ago,
            edited <%= time_ago_in_words(category.updated_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <p class="text-center"><%= link_to "Create new category", new_category_path %></p>
</div>