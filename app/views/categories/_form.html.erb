<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-4 mb-3 bg-info rounded",
local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :name, "Category name", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.text_field :name, class: "form-control shadow rounded",
      placeholder:"Enter a category name" %>
    </div>
  </div>
  <div class="form-group row justify-content-center mt-4">
    <%= form.submit class: "btn btn-outline-light btn-lg w-50" %>
  </div>
<% end %>